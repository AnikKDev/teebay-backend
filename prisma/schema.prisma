// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// models
// users model

model User {
  id          String   @id @default(uuid())
  firstName   String
  lastName    String
  address     String
  email       String   @unique
  phoneNumber String
  password    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // relattions
  orders Order[]
  rents  Rent[]

  // indexing with email. though we could use id for indexing. but need to add jwt for it that would take some time but it would be better that way.
  @@index([email])
  @@map("users")
}

// product model
model Product {
  id           String   @id @default(uuid())
  title        String
  categories   String[]
  description  String
  price        String
  rentalAmount String
  rentalPeriod String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  orders       Order[]
  rents        Rent[]

  @@map("products")
}

// orders model
model Order {
  id        String @id @default(uuid())
  userEmail String
  productId String

  product   Product  @relation(fields: [productId], references: [id])
  user      User?    @relation(fields: [userEmail], references: [email])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("orders")
}

// rental model
model Rent {
  id        String @id @default(uuid())
  userEmail String
  productId String

  product   Product  @relation(fields: [productId], references: [id])
  user      User?    @relation(fields: [userEmail], references: [email])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("rents")
}
